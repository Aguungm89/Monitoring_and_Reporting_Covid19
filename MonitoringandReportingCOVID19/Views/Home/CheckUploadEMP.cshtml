
@model MonitoringandReportingCOVID19.viewmodel.ViMoviewmodel

@{
    ViewBag.Title = "CheckUploadEMP";
}

@{
    var counter = 0;
    var counter1 = 0;
}

<div class="content-wrapper">

    <section class="content">

        <div class="container-fluid">
            <div class="row mt-4">
                <div class="col-lg-12">
                    <div class="form-row">
                        <img src="~/Image/add emp icon.png" width="100" height="80" alt=""><h4 class="page-title"><strong>Upload<br />Employee</strong></h4>
                    </div>
                </div>
            </div>


            <div class="row p-3">
                <div class="col-lg-12">
                    <form action="" method="post">
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <div class="col-sm-2 col-lg-2 m-b-20">
                                <ul class="list-unstyled">
                                    <li><strong> Date </strong> </li>
                                </ul>
                            </div>
                            <div class="col-sm-6 col-lg-6 m-b-10">
                                <ul class="list-unstyled invoice-payment-details">
                                    <li><strong> : @DateTime.Now.ToString("dd-MMMM-yyyy") </strong></li>
                                </ul>
                            </div>
                        </div>
                        @if (Model.V_Uploadnews.Count() > 0)
                        {
                            <div class="card">
                                <div class="card-header bg-gradient-navy">
                                    <h5 class="m-b-10"><strong>New Employee Detail</strong></h5>
                                </div>
                                <div class="card-body table-responsive">
                                    <table id="example" class="table table-striped table-bordered" style="width:100%">
                                        <thead>
                                            <tr style="text-align:center">
                                                <th>No</th>
                                                <th>EMPLOYEE ID</th>
                                                <th>EMPLOYEE NAME</th>
                                                <th>BIRTH OF DATE</th>
                                                <th>GENDER</th>
                                                <th>DEPARTMENT</th>
                                                <th>ADDRESS</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var detail in Model.V_Uploadnews)
                                            {
                                                <tr style="text-align:center">
                                                    <td>@(++counter)</td>
                                                    <td>@detail.EmployeeID</td>
                                                    <td>@detail.Employee_Name</td>
                                                    <td>@detail.DateofBirth.Value.ToString("dd-MMM-yyyy")</td>
                                                    <td>@detail.Gender</td>
                                                    <td>@detail.Departement</td>
                                                    <td>@detail.Address</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        }

                        @if (Model.V_Uploadolds.Count() > 0)
                        {
                            <div class="card">
                                <div class="card-header bg-gradient-navy">
                                    <h5 class="m-b-10"><strong>Existing Employee Detail</strong></h5>
                                </div>
                                <div class="card-body table-responsive">
                                    <table id="example1" class="table table-striped table-bordered" style="width:100%">
                                        <thead>
                                            <tr style="text-align:center">
                                                <th>No</th>
                                                <th>EMPLOYEE ID</th>
                                                <th>EMPLOYEE NAME</th>
                                                <th>BIRTH OF DATE</th>
                                                <th>GENDER</th>
                                                <th>DEPARTMENT</th>
                                                <th>ADDRESS</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var detail in Model.V_Uploadolds)
                                            {
                                                <tr style="text-align:center">
                                                    <td>@(++counter1)</td>
                                                    <td>@detail.EmployeeID</td>
                                                    <td>@detail.Employee_Name</td>
                                                    <td>@detail.DateofBirth.Value.ToString("dd-MMM-yyyy")</td>
                                                    <td>@detail.Gender</td>
                                                    <td>@detail.Departement</td>
                                                    <td>@detail.Address</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        }

                        <div Class="card-box">
                            <div class="form-group row">
                                <label class="col-form-label col-md-2">Upload method</label>
                                <div class="col-md-9">
                                    <select name="type" class="form-control" required>
                                        @if (Model.V_Uploadnews.Count() > 0 && Model.V_Uploadolds.Count() > 0)
                                        {
                                            <option value="">--Select--</option>
                                        }
                                        @if (Model.V_Uploadnews.Count() > 0)
                                        {
                                            <option value="new">Only Upload the New One</option>
                                        }
                                        @if (Model.V_Uploadolds.Count() > 0)
                                        {
                                            <option value="old">Only Update the Old One</option>
                                        }
                                        @if (Model.Temp_Employees.Count() > 0 && Model.Temp_Employees.Count() > 0)
                                        {
                                            <option value="all">Upload New Data and Update Old Data</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-1">
                                    <button type="submit" name="command" class="btn btn-primary" value="save">Save</button>
                                </div>
                                <div class="col-md-1">
                                    <button type="submit" name="command" class="btn btn-primary" value="cancel">Cancel</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>


</div>
