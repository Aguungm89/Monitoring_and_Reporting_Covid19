
@model MonitoringandReportingCOVID19.viewmodel.ViMoviewmodel

@{
    ViewBag.Title = "LocationEmployee";
}


@{
    var counter1 = 0;
}

<div class="content-wrapper">
    <section class="content">
        <div class="container-fluid">
            <div class="row mt-4">
                <div class="col-lg-12">
                    <div class="form-row p-3">
                        <img src="~/Image/iconaddl.jpg" width="100" height="80" alt=""><h4 style="padding-top:15px;" class="page-title"><strong><i class=""></i>Employee <br />Location</strong></h4>
                    </div>
                </div>
            </div>

            <div class="row p-3">
                <div class="col-lg-12">
                    <form action="" method="post">

                        <div class="row">
                            <div class="col-sm-2 col-lg-2 m-b-20">
                                <ul class="list-unstyled">
                                    <li><strong> Date : @DateTime.Now.ToString("dd-MMMM-yyyy") </strong> </li>
                                </ul>
                            </div>

                        </div>

                        <div class="card">
                            <div class="card-header bg-gradient-navy">
                                <h5 class="m-b-10"><strong><i class="fa fa-globe"></i> Employee Locations</strong></h5>
                            </div>
                            <div class="card-body table-responsive">
                                <table id="example" class="table table-striped table-bordered" style="width:100%">
                                    <thead>
                                        <tr style="text-align:center">
                                            <th>No</th>
                                            <th>EMPLOYEE ID</th>
                                            <th>DATE</th>
                                            <th>DAYS ISOLATION</th>
                                            <th>CURRENT POSITION</th>
                                            <th>COORDINAT POINT</th>
                                            <th>ADDRESS</th>
                                            <th>DESCRIPTION</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var detail in Model.Employee_Locations)
                                        {
                                            <tr style="text-align:center">
                                                <td>@(++counter1)</td>
                                                <td>@detail.Emp_id</td>
                                                <td>@detail.Date_AddLocation.Value.ToString("dd-MMM-yyyy")</td>
                                                <td>@detail.Days_Isolation</td>
                                                <td>@detail.Current_position</td>
                                                <td>@detail.titik_kordinat</td>
                                                <td>@detail.Address</td>
                                                <td>@detail.Description</td>
                                                
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>



                    </form>
                </div>
            </div>


        </div>
    </section>


</div>


