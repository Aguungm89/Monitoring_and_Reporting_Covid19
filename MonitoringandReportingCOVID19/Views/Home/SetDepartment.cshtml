

@model MonitoringandReportingCOVID19.viewmodel.ViMoviewmodel

@{
    ViewBag.Title = "SetDepartment";
}


@{
    var counter1 = 0;
}

<div class="content-wrapper">
    <section class="content">
        <div class="container-fluid">
            <div class="row mt-4">
                <div class="col-lg-12">
                    <div class="form-row p-3">
                        <img src="~/Image/departicon.png" width="80" height="80" alt=""><h4 class="page-title" style="padding-top:10px; padding-left:5px;"><strong>DEPARTMENT<br />SETTING</strong></h4>
                    </div>
                </div>
            </div>

            <div class="row p-3">
                <div class="col-lg-12">
                    <form action="" method="post">
                        @Html.AntiForgeryToken()


                        <input name="Confirmation_Date" type="hidden" value="@DateTime.Now.ToString("yyyy-MM-dd hh:mm")">

                        <div class="row">
                            <div class="col-sm-2 col-lg-2 m-b-10">
                                <ul class="list-unstyled">
                                    <li><strong> Date : @DateTime.Now.ToString("dd-MMMM-yyyy") </strong> </li>
                                </ul>
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-header bg-gradient-primary">
                                <h5 class="m-b-10"><strong><i class="fa fa-check"></i>DEPARTMENT LIST</strong></h5>
                            </div>
                            <div class="card-body table-responsive">
                                <table id="example" class="table table-striped table-bordered" style="width:100%">
                                    <thead>
                                        <tr style="text-align:center">
                                            <th>No</th>
                                            <th>DEPARTMENT ID</th>
                                            <th>ACTION</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var detail in Model.Departments)
                                        {
                                            <tr style="text-align:center">
                                                <td>@(++counter1)</td>
                                                <td>@detail.Department_Name</td>
                                                <td>
                                                    <a class="btn btn-gradient-danger" href="@Url.Action("DeleteDepart", new { ids = detail.DepartID })"><i class="fa fa-trash m-r-5"></i> Delete</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="col-sm-4 col-md-12 text-left m-b-20">
                            <a  class="btn bg-gradient-primary" href="@Url.Action("AddDepart", "Home")"><i class="fa fa-plus m-r-5"></i> Add New</a>
                        </div>

                    </form>
                </div>
            </div>


        </div>
    </section>


</div>




