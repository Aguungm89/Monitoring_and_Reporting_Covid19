
@model MonitoringandReportingCOVID19.viewmodel.ViMoviewmodel

@{
    ViewBag.Title = "ConfirmationCases";
}

@{
    var counter1 = 0;
}

<div class="content-wrapper">
    <section class="content">
        <div class="container-fluid">
            <div class="row mt-4">
                <div class="col-lg-12">
                    <div class="form-row p-3">
                        <img src="~/Image/confirm case.png" width="80" height="80" alt=""><h4 class="page-title"><strong>CONFIRMATION<br />CASES</strong></h4>
                    </div>
                </div>
            </div>

            <div class="row p-3">
                <div class="col-lg-12">
                    <form action="" method="post">
                        @Html.AntiForgeryToken()


                        <input name="Confirmation_Date" type="hidden" value="@DateTime.Now.ToString("yyyy-MM-dd hh:mm")">

                        <div class="row">
                            <div class="col-sm-2 col-lg-2 m-b-10">
                                <ul class="list-unstyled">
                                    <li><strong> Date : @DateTime.Now.ToString("dd-MMMM-yyyy") </strong> </li>
                                </ul>
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-header bg-gradient-info">
                                <h5 class="m-b-10"><strong><i class="fa fa-check"></i>Confirmation Cases</strong></h5>
                            </div>
                            <div class="card-body table-responsive">
                                <table id="example" class="table table-striped table-bordered" style="width:100%">
                                    <thead>
                                        <tr style="text-align:center">
                                            <th>No</th>
                                            <th>CONFIRMATION ID</th>
                                            <th>EMPLOYEE ID</th>
                                            <th>EMPLOYEE NAME</th>
                                            <th>GENDER</th>
                                            <th>DEPARTMENT</th>
                                            <th>CONFIRMATION DATE</th>
                                            <th>STATUS</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var detail in Model.CovidConfirmCas)
                                        {
                                            <tr style="text-align:center">
                                                <td>@(++counter1)</td>
                                                <td>CASES-00-@detail.ConfirmID</td>
                                                <td>@detail.Emp_id</td>
                                                <td>@detail.Emp_name</td>
                                                <td>@detail.Gender</td>
                                                <td>@detail.Departement</td>
                                                <td>@detail.Confirmation_Date.Value.ToString("dd-MMM-yyyy")</td>
                                                <td>@detail.Status</td>

                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="col-sm-4 col-md-12 text-left m-b-20">
                            <button type="submit" name="command" value="Download" class="btn btn-primary text-righ"><i class="fa fa-file-excel-o"></i> Download Excel</button>
                        </div>

                    </form>
                </div>
            </div>


        </div>
    </section>


</div>

