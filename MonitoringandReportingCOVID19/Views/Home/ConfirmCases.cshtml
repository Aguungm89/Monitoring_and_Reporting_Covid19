
@model MonitoringandReportingCOVID19.viewmodel.ViMoviewmodel


@{
    var counter1 = 0;
}

@{
    ViewBag.Title = "ConfirmCases";
}

<div class="content-wrapper">
    <section class="content">
        <div class="container-fluid">
            <div class="row mt-4">
                <div class="col-lg-12">
                    <div class="form-row p-3">
                        <img src="~/Image/detail cases1.png" width="80" height="80" alt=""><h4 class="page-title"><strong><i class="fa fa-check"></i>Cases <br />Confirmation</strong></h4>
                    </div>
                </div>
            </div>

            <div class="row p-3">
                <div class="col-lg-12">
                    <form action="" method="post">
                        @Html.AntiForgeryToken()

                        
                        <input name="Confirmation_Date" type="hidden" value="@DateTime.Now.ToString("yyyy-MM-dd hh:mm")">

                        <div class="row">
                            <div class="col-sm-2 col-lg-2 m-b-20">
                                <ul class="list-unstyled">
                                    <li><strong> Date : @DateTime.Now.ToString("dd-MMMM-yyyy") </strong> </li>
                                </ul>
                            </div>
                            
                        </div>

                        <div class="card">
                            <div class="card-header bg-gradient-navy">
                                <h5 class="m-b-10"><strong><i class="fa fa-check"></i>Case Confirmation</strong></h5>
                            </div>
                            <div class="card-body table-responsive">
                                <table id="example" class="table table-striped table-bordered" style="width:100%">
                                    <thead>
                                        <tr style="text-align:center">
                                            <th>No</th>
                                            <th>EMPLOYEE ID</th>
                                            <th>EMPLOYEE NAME</th>
                                            <th>BIRTH OF DATE</th>
                                            <th>GENDER</th>
                                            <th>DEPARTMENT</th>
                                            <th>ACTION</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var detail in Model.V_ConfirmEMPs)
                                        {
                                            <tr style="text-align:center">
                                                <td>@(++counter1)</td>
                                                <td>@detail.Emp_id</td>
                                                <td>@detail.Emp_name</td>
                                                <td>@detail.DOB.Value.ToString("dd-MMM-yyyy")</td>
                                                <td>@detail.Gender</td>
                                                <td>@detail.Departement</td>
                                                <td><a class="dropdown-item bg-gradient-danger" href="@Url.Action("AddConfirm", new { ids = detail.Emp_ids })"><i class="fa fa-check"></i>CONFIRM</a></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>



                    </form>
                </div>
            </div>


        </div>
    </section>


</div>

