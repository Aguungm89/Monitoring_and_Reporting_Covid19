
@model MonitoringandReportingCOVID19.viewmodel.ViMoviewmodel

@{
    ViewBag.Title = "ActiveCases";
}

@{
    var counter1 = 0;
}

<div class="content-wrapper">
    <section class="content">
        <div class="container-fluid">
            <div class="row mt-4">
                <div class="col-lg-12">
                    <div class="form-row p-3">
                        <img src="~/Image/coiv.png" width="80" height="80" alt=""><h4 class="page-title"><strong>ACTIVE<br />CASES</strong></h4>
                    </div>
                </div>
            </div>

            <div class="row p-3">
                <div class="col-lg-12">
                    <form action="" method="post">
                        @Html.AntiForgeryToken()


                        <input name="Confirmation_Date" type="hidden" value="@DateTime.Now.ToString("yyyy-MM-dd hh:mm")">

                        <div class="row">
                            <div class="col-sm-2 col-lg-2 m-b-10">
                                <ul class="list-unstyled">
                                    <li><strong> Date : @DateTime.Now.ToString("dd-MMMM-yyyy") </strong> </li>
                                </ul>
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-header bg-gradient-orange">
                                <h5 class="m-b-10"><strong><i class="fa fa-viruses"></i> Active Cases</strong></h5>
                            </div>
                            <div class="card-body table-responsive">
                                <table id="example" class="table table-striped table-bordered" style="width:100%">
                                    <thead>
                                        <tr style="text-align:center;">
                                            <th rowspan="2">No</th>
                                            <th rowspan="2">CONFIRAMTION ID</th>
                                            <th rowspan="2">EMPLOYEE ID</th>
                                            <th rowspan="2">EMPLOYEE NAME</th>
                                            <th rowspan="2">GENDER</th>
                                            <th rowspan="2">DEPARTMENT</th>
                                            <th rowspan="2">CONFIRMATION DATE</th>
                                            <th colspan="2">ACTION</th>
                                        </tr>
                                        <tr style="text-align:center">
                                            <th>RECOVERY</th>
                                            <th>DEATH</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var detail in Model.V_ActiveCases)
                                        {
                                            <tr style="text-align:center">
                                                <td>@(++counter1)</td>
                                                <td>CASES-00-@detail.ConfirmID</td>
                                                <td>@detail.Emp_id</td>
                                                <td>@detail.Emp_name</td>
                                                <td>@detail.Gender</td>
                                                <td>@detail.Departement</td>
                                                <td>@detail.Confirmation_Date.Value.ToString("dd-MMM-yyyy")</td>
                                                <td>
                                                    <a class="dropdown-item bg-gradient-green" href="@Url.Action("AddRecovery", new { ids = detail.ConfirmID })"><i class="fas fa-first-aid"></i> RECOVERY</a>
                                                </td>
                                                <td>
                                                    <a class="dropdown-item bg-gradient-danger" href="@Url.Action("AddDeath", new { ids = detail.ConfirmID })"><i class="fa fa-skull-crossbones"></i> DEATH</a>
                                                </td>

                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>



                    </form>
                </div>
            </div>


        </div>
    </section>


</div>

